 {{#if update}}
  <form class="vflex stack form" method="POST" action="/inventory/update-item/{{item.id}}">
    <div>
      <label for="productname">Product Name</label>
      <input type="text" id="productname" name="productname" value="{{item.productname}}">
    </div>
    <div class="vflex">
      <label for="category">Category</label>
      <select id="category" name="category">
        {{#each categories}}
          {{#if (eq ../item.category.[0].id this.id)}}
            <option value={{this.id}} selected>{{this.name}}</option>
          {{else}}
            <option value={{this.id}}>{{this.name}}</option>
          {{/if}}
        {{/each}}
      </select>
    </div>
    <div>
      <label for="price">Price</label>
      <input type="number" id="price" name="price" value={{item.price}}>
    </div>
    <div>
      <label for="stock">Stock</label>
      <input type="number" id="stock" name="stock" value={{item.stock}}>
    </div>
        <button type="submit">Update item</button>
  </form>
  {{else}}
   <form class="vflex stack form" method="POST" action="/inventory/new-item">
       <div>
         <label for="productname">Product Name</label>
         <input type="text" id="productname" name="productname"/>
       </div>
      <div class="vflex">
        <label for="category">Category</label>
        <select id="category" name="category">
          {{#each categories}}
          <option value={{this.id}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <div>
        <label for="price">Price</label>
        <input type="number" id="price" name="price"/>
      </div>
      <div>
        <label for="stock">Stock</label>
        <input type="number" id="stock" name="stock"/>
      </div>
      <button type="submit">Create new item</button>
  </form>
{{/if}}